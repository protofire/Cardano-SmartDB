    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: debug server-side",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/next/dist/bin/next"
        },
        // {
        //     "name": "Next.js: debug server-side2",
        //     "type": "node-terminal",
        //     "request": "launch",
        //     "command": "npm run dev"
        // },

        {
            "name": "Next.js: debug server-side-NEW",
            "type": "node",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "runtimeExecutable": "npm", 
            "runtimeArgs": ["run", "dev"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "env": {
                "NODE_ENV": "development",
                "NODE_OPTIONS": "--inspect",
                "DEBUG":"true"
            }
        },
        {
            "name": "Attach to Next.js",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "sourceMaps": true,
            "skipFiles": ["<node_internals>/**"],
            // "sourceMapPathOverrides": {
            //     "*/(api)/*": "${workspaceFolder}/*"
            // }
        },
        
       
              {
                "type": "node",
                "request": "attach",
                "name": "Attach to Next.js library",
                "port": 9229,
                "restart": true,
                "sourceMaps": true,
                "outFiles": ["${workspaceFolder}/dist/**/*.js"],
                "resolveSourceMapLocations": [
                  "${workspaceFolder}/**",
                  "!**/node_modules/**"
                ]
              },
           

        {
            "name": "Next.js: debug full stack2",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "serverReadyAction": {
                "pattern": "started server on .+, url: (https?://.+)",
                "uriFormat": "%s",
                "action": "openExternally"
            },
            "runtimeArgs": [
                "--profile-directory=Default" // Replace 'Default' with the name of your profile directory
            ]
        },
        {
            "name": "Next.js: debug client-side",
            // "type": "pwa-chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "userDataDir": false
        },
        // {
        //     "type": "node",
        //     "request": "launch",
        //     "name": "Run Standalone Script",
        //     "skipFiles": ["<node_internals>/**"],
        //     "program": "${workspaceFolder}/src/__standalone__/parseBlockchain.ts",
        //     "preLaunchTask": "tsc: build - tsconfig-for-standalone.json",
        //     "outFiles": ["${workspaceFolder}/dist/**/*.js"]
        // },
        // {
        //     "type": "node",
        //     "request": "launch",
        //     "name": "Debug TypeScript",
        //     "runtimeExecutable": "/home/manuelpadilla/.nvm/versions/node/v20.7.0/bin/ts-node",
        //     "args": ["--project", "${workspaceFolder}/tsconfig-for-standalone.json", "${workspaceFolder}/src/__standalone__/parseBlockchain.ts"],
        //     "console": "integratedTerminal",
        //     "internalConsoleOptions": "openOnSessionStart"
        // }
    ],
    "compounds": [
        {
            "name": "Next.js: debug full stack",
            "configurations": ["Next.js: debug server-side", "Next.js: debug client-side"]
        }
    ]
}
