{
  "name": "example-use-smart-db",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "node --max-old-space-size=8192 node_modules/.bin/next dev -p 3000",
    "deb": "cross-env DEBUG=true NODE_OPTIONS='--inspect' next dev  -p 3000",
    "dev:stop": "kill-port 3000",
    "build": "rm -fr ./.next && next build",
    "start": "next start -p 3000",
    "clean": "rm -fr ./.next",
    "cleanAll": "rm -fr ./node_modules ./.next",
    "lint": "next lint",
    "test-performance": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.performance.js --no-cache",
    "test-api": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.api.js --no-cache",
    "test-api:watch": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js --watch  --config=jest.config.api.js --no-cache",
    "test-api:coverage": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --config=jest.config.api.js --no-cache",
    "test-concurrency": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --config=jest.config.concurrency.js --no-cache",
    "test-concurrency:update-comparision": "ts-node __tests__/concurrency/updateComparison.mjs",
    "standalone": "TS_NODE_PROJECT='tsconfig-for-standalone.json' ts-node ./src/__standalone__/minADA.ts",
    "watchInstall": "chokidar \"../smart-db.tgz\" -c \"npm run dev:stop && npm install ../smart-db.tgz --force\"",
    "swagger-dev": "ts-node -P tsconfig.server.json ./_swagger/server.ts",
    "swagger-start": "NODE_ENV=production ts-node -P tsconfig.server.json ./_swagger/server.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^9.0.3",
    "easy-peasy": "^5.0.4",
    "lucid-cardano": "^0.10.10",
    "next": "^12.1.6",
    "next-auth": "^4.22.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-modal": "^3.16.1",
    "react-notifications-component": "^4.0.1",
    "smart-db": "file:../smart-db.tgz",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@jest/expect": "^29.7.0",
    "@next/eslint-plugin-next": "^13.4.12",
    "@types/cors": "^2.8.13",
    "@types/jest": "^29.5.12",
    "@types/node": "20.5.9",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@types/react-modal": "^3.16.3",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "autoprefixer": "^10.4.20",
    "chokidar-cli": "^3.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "eslint": "8.48.0",
    "eslint-config-next": "13.4.19",
    "ignore-loader": "^0.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-serial-runner": "^1.2.1",
    "kill-port": "^2.0.1",
    "prettier": "^2.5.1",
    "reflect-metadata": "^0.1.13",
    "sass": "^1.72.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "5.2.2",
    "xlsx": "^0.18.5"
  }
}
